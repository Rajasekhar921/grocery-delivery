# A grocery delivery application in python

# Define a class for the grocery items
class Item:
  def __init__(self, name, price, quantity):
    self.name = name
    self.price = price
    self.quantity = quantity

  def __str__(self):
    return f"{self.name} - ${self.price} x {self.quantity}"

# Define a class for the shopping cart
class Cart:
  def __init__(self):
    self.items = []

  def add_item(self, item):
    self.items.append(item)

  def remove_item(self, item):
    if item in self.items:
      self.items.remove(item)

  def get_total(self):
    total = 0
    for item in self.items:
      total += item.price * item.quantity
    return total

  def __str__(self):
    result = "Your shopping cart:\n"
    for item in self.items:
      result += str(item) + "\n"
    result += f"Total: ${self.get_total()}"
    return result

# Define a class for the delivery service
class Delivery:
  def __init__(self, name, fee):
    self.name = name
    self.fee = fee

  def __str__(self):
    return f"{self.name} - ${self.fee}"

# Define some sample items
apple = Item("Apple", 0.5, 1)
banana = Item("Banana", 0.3, 2)
milk = Item("Milk", 2.5, 1)
bread = Item("Bread", 1.5, 1)

# Define some sample delivery services
express = Delivery("Express", 5)
standard = Delivery("Standard", 3)
pickup = Delivery("Pickup", 0)

# Create a new shopping cart
cart = Cart()

# Add some items to the cart
cart.add_item(apple)
cart.add_item(banana)
cart.add_item(milk)

# Print the cart
print(cart)

# Remove an item from the cart
cart.remove_item(banana)

# Print the cart again
print(cart)

# Choose a delivery service
delivery = express

# Print the final order
print(f"Your order:\n{cart}\nDelivery: {delivery}\nGrand Total: ${cart.get_total() + delivery.fee}")
